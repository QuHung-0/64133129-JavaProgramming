<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="TOP_CENTER" prefWidth="320" prefHeight="240" fx:controller="">
    <children>
        <Label text="Thêm Từ Mới"/>
        <TextField fx:id="EnglishWordField" promptText="Nhập từ tiếng Anh" />
        <TextField fx:id="VietnameseTranslationField" promptText="Nhập nghĩa tiếng Việt" />
        <TextArea fx:id="VietnameseExplanationField" promptText="Nhập giải thích tiếng Việt" prefRowCount="4" />
        <Button fx:id="SaveWordButton" text="Lưu Từ Mới" />
        <Button fx:id="CancelButton" text="Hủy" />
    </children>

</VBox>
